<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape
            android:shape="oval"
            android:innerRadius="27dp"
            android:useLevel="false"
            >
            <solid
                android:color="#B3000000"
                />
        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            android:innerRadius="27dp"
            android:thickness="6dp"
            android:useLevel="false"
            >
            <solid
                android:color="#99272727"
                />
        </shape>
    </item>
    <item android:width="66dp" android:height="66dp">
        <bitmap
            android:src="@drawable/ico_video_trimming"
            android:gravity="center"
            />
    </item>
</layer-list>