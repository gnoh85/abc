<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#eeeeee"
    >

    <include layout="@layout/toolbar"/>

    <!--SNS連携タイトル-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:text="@string/title_settings_social_connect"
        />
    <!--SNS連携説明-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="left|center_vertical"
        android:textSize="12sp"
        android:text="@string/desc_settings_social_connect"
        />

    <!--SNS連携ボタン-->
    <LinearLayout
        android:id="@+id/sns_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/card_bg"
        >
        <!--Twitter-->
        <view
            class="tv.mixch.android.AccountActivity$SocialConnectButton"
            android:id="@+id/twitter_connect_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:socialIcon="@drawable/ico_social_twitter_round"
            app:socialText="@string/login_twitter"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            />
        <!--Facebook-->
        <view
            class="tv.mixch.android.AccountActivity$SocialConnectButton"
            android:id="@+id/facebook_connect_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:socialIcon="@drawable/ico_social_facebook_round"
            app:socialText="@string/login_facebook"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            />
        <!--Google-->
        <view
            class="tv.mixch.android.AccountActivity$SocialConnectButton"
            android:id="@+id/google_connect_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:socialIcon="@drawable/ico_social_google_round"
            app:socialText="@string/login_google"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            />
        <!--LINE-->
        <view
            class="tv.mixch.android.AccountActivity$SocialConnectButton"
            android:id="@+id/line_connect_button"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:socialIcon="@drawable/ico_social_line_round"
            app:socialText="@string/login_line"
            />
    </LinearLayout>

    <!--機種変説明タイトル-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="left|bottom"
        android:textSize="14sp"
        android:text="@string/title_settings_transfer_account"
        />

    <!--機種変説明ボタン-->
    <TextView
        android:id="@+id/account_transfer"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="left|center_vertical"
        android:textSize="16sp"
        android:text="@string/label_settings_transfer_account"
        android:background="@drawable/card_bg"
        android:drawableRight="@drawable/ic_arrow_forward_grey600_18dp"
        />

    <!--ログアウトタイトル-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="left|bottom"
        android:textSize="14sp"
        android:text="@string/title_settings_account_change"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingBottom="4dp"
        android:background="@drawable/card_bg"
        >
        <!--ログアウトボタン-->
        <TextView
            android:id="@+id/account_change"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:text="@string/label_settings_account_change"
            android:drawableRight="@drawable/ic_arrow_forward_grey600_18dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            />

        <!--ヘルプ-->
        <TextView
            android:id="@+id/account_about"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:text="@string/label_settings_account_help"
            android:drawableRight="@drawable/ic_arrow_forward_grey600_18dp"
            />
    </LinearLayout>

</LinearLayout>