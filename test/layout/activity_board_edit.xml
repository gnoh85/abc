<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFFFFF">

	<include layout="@layout/toolbar" />

	<RelativeLayout
		android:id="@+id/user_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="0dp"
		android:paddingBottom="8dp">
		<tv.mixch.widget.CircleNetworkImageView
			android:id="@+id/user_image"
			android:layout_width="56dp"
			android:layout_height="56dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:src="@null"
			android:scaleType="fitXY"
			android:background="@null"
			android:adjustViewBounds="true"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			tools:ignore="ContentDescription"
		/>
		<TextView
			android:id="@+id/user_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@id/user_image"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="12dp"
			android:layout_marginBottom="0dp"
			android:gravity="center_vertical|left"
			android:textSize="14sp"
			android:textColor="#ffeaa700"
			android:typeface="normal"
			android:textStyle="bold"
			android:lines="1"
			android:ellipsize="end"
		/>
		<TextView
			android:id="@+id/user_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/user_name"
			android:layout_alignLeft="@id/user_name"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:gravity="center_vertical|left"
			android:textSize="12sp"
			android:textColor="#ff777777"
			android:typeface="normal"
			android:textStyle="normal"
			android:lines="1"
			android:ellipsize="none"
			tools:ignore="RelativeOverlap"
		/>
		<TextView
			android:id="@+id/user_comment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/user_date"
			android:layout_alignLeft="@id/user_date"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:gravity="top|left"
			android:textSize="14sp"
			android:textColor="#ff333333"
			android:typeface="normal"
			android:textStyle="normal"
			android:ellipsize="none"
		/>
	</RelativeLayout>

	<EditText
		android:id="@+id/edit_text"
		android:layout_width="match_parent"
		android:layout_height="96dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:gravity="top"
		android:hint="@string/board_edit_hint"
		android:singleLine="false"
		android:scrollHorizontally="false"
		android:minLines="1"
		android:maxLines="20"
		android:maxLength="200"
		android:ellipsize="none"
		android:textSize="14sp"
		android:imeOptions="actionDone"
		android:inputType="textMultiLine"
	/>

	<Space
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
	/>

	<Button
		android:id="@+id/action_comment_write"
		android:layout_width="match_parent"
		android:layout_height="52dp"
		android:layout_gravity="center_horizontal|bottom"
		android:text="@string/board_edit_write"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@color/mixch_yellow"
		android:layout_margin="0dp"
	/>
</LinearLayout>
