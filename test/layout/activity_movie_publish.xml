<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:weightSum="1">
	<include layout="@layout/toolbar" />
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#F7F7F7">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:id="@+id/movie_layout"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF">
				<tv.mixch.widget.NetworkImageView
					android:id="@+id/movie_cover_image"
					android:layout_width="64dp"
					android:layout_height="64dp"
					android:layout_marginTop="15dp"
					android:layout_marginLeft="12dp"
					android:layout_marginRight="11dp"
					android:layout_marginBottom="20dp"
					/>
				<EditText
					android:id="@+id/movie_memo_text"
					android:layout_width="0dp"
					android:layout_height="120dp"
					android:layout_weight="1"
					android:hint="@string/movie_publish_memo"
					android:inputType="textMultiLine"
					android:imeOptions="actionDone"
					android:textSize="14sp"
					android:gravity="top"
					android:layout_marginTop="0dp"
					android:layout_marginLeft="0dp"
					android:layout_marginRight="0dp"
					android:layout_marginBottom="10dp"
					/>
				<TextView
					android:id="@+id/movie_remain_text"
					android:layout_width="28dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:layout_marginLeft="0dp"
					android:layout_marginRight="8dp"
					android:text=""
					android:textColor="#FF7617"
					android:textSize="12sp"
					android:gravity="top|right"
					/>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#D3D3D3"
				/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="16dp"
				android:background="#D3D3D3"
				/>
			<FrameLayout
				android:id="@+id/channel_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF">
				<TextView
					android:id="@+id/channel_button"
					android:layout_width="match_parent"
					android:layout_height="44dp"
					android:layout_gravity="left"
					android:paddingLeft="12dp"
					android:paddingRight="12dp"
					android:text="@string/movie_publish_channel"
					android:textColor="#4A4A4A"
					android:textSize="14sp"
					android:textStyle="normal"
					android:gravity="center_vertical|left"
					android:drawableRight="@drawable/ic_chevron_right_grey600_18dp"
					/>
				<TextView
					android:id="@+id/channel_text"
					android:layout_width="wrap_content"
					android:layout_height="44dp"
					android:layout_gravity="right"
					android:layout_marginTop="0dp"
					android:layout_marginLeft="0dp"
					android:layout_marginRight="40dp"
					android:layout_marginBottom="0dp"
					android:text=""
					android:textColor="#359B9D"
					android:textSize="16sp"
					android:textStyle="bold"
					android:gravity="center_vertical|left"
					/>
			</FrameLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#D3D3D3"
				/>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:layout_marginTop="16dp"
				android:background="#D3D3D3"
				/>
			<FrameLayout
				android:id="@+id/tag_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF">
				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp">
					<TextView
						android:id="@+id/tag_empty_text"
						android:layout_width="match_parent"
						android:layout_height="44dp"
						android:text="@string/movie_publish_tag"
						android:textColor="#AAAAAA"
						android:gravity="center_vertical|left"
						android:drawableLeft="@drawable/ic_tag_add"
						android:drawablePadding="13dp"
						/>
					<TextView
						android:id="@+id/tag_empty_tip"
						android:layout_width="wrap_content"
						android:layout_height="28dp"
						android:layout_marginLeft="8dp"
						android:layout_gravity="center_vertical"
						android:paddingLeft="22dp"
						android:paddingRight="8dp"
						android:text="@string/movie_publish_tag_tip"
						android:textColor="#FFFFFF"
						android:gravity="center_vertical|left"
						android:background="@drawable/movie_tag_tip_bg"
						/>
				</LinearLayout>
				<TextView
					android:id="@+id/tag_input_text"
					android:layout_width="wrap_content"
					android:layout_height="32dp"
					android:layout_marginTop="6dp"
					android:layout_marginBottom="6dp"
					android:layout_gravity="left"
					android:paddingLeft="15dp"
					android:paddingRight="10dp"
					android:text=""
					android:textColor="#FF7617"
					android:textSize="16sp"
					android:gravity="center_vertical|left"
					android:drawableLeft="@drawable/ic_tag_word"
					android:drawablePadding="13dp"
					android:visibility="gone"
					/>
				<ImageView
					android:id="@+id/tag_remove_image"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:padding="13dp"
					android:layout_gravity="center_vertical|right"
					android:src="@drawable/ic_cancel_grey600_18dp"
					android:visibility="gone"
					/>
			</FrameLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#D3D3D3"
				/>
			<FrameLayout
				android:id="@+id/link_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF">
				<TextView
					android:id="@+id/link_empty_text"
					android:layout_width="match_parent"
					android:layout_height="44dp"
					android:layout_marginLeft="15dp"
					android:layout_gravity="left"
					android:text="@string/movie_link_add"
					android:textColor="#AAAAAA"
					android:gravity="center_vertical|left"
					android:drawableLeft="@drawable/ic_link_add"
					android:drawablePadding="13dp"
					/>

				<LinearLayout
					android:id="@+id/link_input_layout"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="48dp"
					android:layout_marginRight="52dp"
					android:layout_marginTop="6dp"
					android:layout_marginBottom="6dp"
					android:background="@drawable/movie_link_bg"
					android:visibility="gone">
					<LinearLayout
						android:orientation="vertical"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:layout_weight="1">
						<TextView
							android:id="@+id/link_name_text"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_gravity="left"
							android:layout_marginLeft="11dp"
							android:layout_marginRight="0dp"
							android:layout_marginTop="3dp"
							android:layout_marginBottom="0dp"
							android:gravity="top|left"
							android:textSize="13sp"
							android:textColor="#717171"
							android:typeface="normal"
							android:textStyle="normal"
							android:lines="1"
							android:ellipsize="none"
							android:text=""
							android:drawableLeft="@drawable/ic_link"
							android:drawablePadding="6dp"
							/>
						<TextView
							android:id="@+id/link_memo_text"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="32dp"
							android:layout_marginRight="0dp"
							android:layout_marginTop="0dp"
							android:layout_marginBottom="0dp"
							android:gravity="top|left"
							android:textSize="12sp"
							android:textColor="#858585"
							android:typeface="normal"
							android:textStyle="normal"
							android:lines="1"
							android:ellipsize="none"
							android:text=""
							/>
					</LinearLayout>
					<tv.mixch.widget.NetworkImageView
						android:id="@+id/link_image"
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:layout_marginLeft="4dp"
						android:layout_marginRight="8dp"
						android:layout_marginTop="4dp"
						android:layout_marginBottom="4dp"
						/>
				</LinearLayout>
				<ImageView
					android:id="@+id/link_remove_image"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:padding="13dp"
					android:layout_gravity="center_vertical|right"
					android:src="@drawable/ic_cancel_grey600_18dp"
					android:visibility="gone"
					/>
			</FrameLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="#D3D3D3"
				/>
			<LinearLayout
				android:id="@+id/social_layout"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:gravity="top|left"
					android:textSize="14sp"
					android:textColor="#4A4A4A"
					android:typeface="normal"
					android:textStyle="normal"
					android:text="@string/movie_publish_sns"
					/>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#D3D3D3"
					/>
				<android.support.v7.widget.SwitchCompat
					android:id="@+id/twitter_post"
					android:background="#FFFFFF"
					android:layout_width="match_parent"
					android:layout_height="44dp"
					android:paddingLeft="10dp"
					android:paddingRight="16dp"
					android:gravity="center_vertical|left"
					android:drawableLeft="@drawable/ic_share_twitter"
					android:drawablePadding="8dp"
					android:text="Twitter"
					/>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#D3D3D3"
					/>
				<android.support.v7.widget.SwitchCompat
					android:id="@+id/facebook_post"
					android:background="#FFFFFF"
					android:layout_width="match_parent"
					android:layout_height="44dp"
					android:paddingLeft="10dp"
					android:paddingRight="16dp"
					android:gravity="center_vertical|left"
					android:drawableLeft="@drawable/ic_share_facebook"
					android:drawablePadding="8dp"
					android:text="Facebook"
					/>
				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="#D3D3D3"
					/>
			</LinearLayout>

			<Button
				android:id="@+id/submit_button"
				android:layout_width="match_parent"
				android:layout_height="56dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginLeft="48dp"
				android:layout_marginRight="48dp"
				android:layout_marginTop="32dp"
				android:layout_marginBottom="32dp"
				android:text="@string/movie_publish_send"
				android:textColor="#333333"
				android:textSize="16sp"
				android:background="@drawable/button_round_publish"
				/>
		</LinearLayout>
	</ScrollView>

</LinearLayout>



