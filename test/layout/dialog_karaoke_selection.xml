<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EFEFEF">
    <View
        android:id="@+id/toolbar_padding_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/mixch_yellow"
    />
    <include layout="@layout/view_dialog_toolbar"/>
    <tv.mixch.widget.TabViewEx
        android:id="@+id/tab_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"></tv.mixch.widget.TabViewEx>

    <android.support.v4.view.ViewPager
        android:id="@+id/karaoke_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>