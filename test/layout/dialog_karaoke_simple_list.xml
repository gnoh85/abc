<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#eeeeee">
        <View
            android:id="@+id/toolbar_padding_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/mixch_yellow"
        />
        <include layout="@layout/view_dialog_toolbar"/>
        <tv.mixch.widget.KaraokeSongListView
            android:id="@+id/karaoke_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eeeeee"></tv.mixch.widget.KaraokeSongListView>



    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</FrameLayout>