<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="top|center_horizontal"
              android:background="@drawable/bg_round"
              >
    
    <ImageView
        android:id="@+id/live_ss_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="top|right"
        android:src="@drawable/ico_close_blue"
        />

    <TextView
        android:id="@+id/live_share_title"
        android:layout_width="match_parent"
        android:layout_marginTop="-24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="0dp"
        android:layout_height="21dp"
        android:layout_gravity="left"
        android:gravity="left|center_vertical"
        android:text="@string/ss_saved"
        />

    <ImageView
        android:id="@+id/live_share_ss"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/live_share_twitter"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:text="@string/share_twitter"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/btn_ic_twitter"
        android:drawablePadding="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_round_twitter_deepblue"
        />

</LinearLayout>