<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <View
        android:id="@+id/highlight"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="top"
        android:background="@color/transparent"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/filter_icon"
            android:layout_marginTop="1dp"
            android:layout_width="@dimen/filter_icon_width"
            android:layout_height="@dimen/filter_icon_height"
            android:src="@drawable/filter_baby"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/rotated_filter_icon"
            android:layout_marginTop="1dp"
            android:layout_width="@dimen/filter_icon_height"
            android:layout_height="@dimen/filter_icon_width"
            android:src="@drawable/filter_baby"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/filter_name"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44000000"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/tw__solid_white"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/rotated_filter_name"
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44000000"
            android:layout_gravity="top|left"
            android:transformPivotX="6dp"
            android:transformPivotY="6dp"
            android:rotation="90"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/tw__solid_white"
            android:textSize="12dp"
            />
    </FrameLayout>




</LinearLayout>