<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/ad_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white">
	<ImageView
		android:id="@+id/ad_cover"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:adjustViewBounds="true"
		tools:ignore="ContentDescription"
		/>
	<FrameLayout
		android:id="@+id/ad_choices"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		/>
	<tv.mixch.widget.CircleImageView
		android:id="@+id/ad_icon"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:layout_below="@id/ad_cover"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="12dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="0dp"
		tools:ignore="ContentDescription"
		/>
	<TextView
		android:id="@+id/ad_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/ad_cover"
		android:layout_toRightOf="@id/ad_icon"
		android:layout_marginLeft="12dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="0dp"
		android:gravity="center_vertical|left"
		android:textSize="16sp"
		android:textColor="@color/mixch_yellow"
		android:typeface="normal"
		android:textStyle="bold"
		android:lines="1"
		android:ellipsize="end"
		/>
	<TextView
		android:id="@+id/ad_sponsored"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/ad_title"
		android:layout_alignLeft="@id/ad_title"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="12dp"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="0dp"
		android:gravity="center_vertical|right"
		android:text="Sponsored"
		android:textSize="12sp"
		android:textColor="#ff777777"
		android:typeface="normal"
		android:textStyle="normal"
		android:lines="1"
		android:ellipsize="none"
		tools:ignore="RtlSymmetry"
		/>
	<TextView
		android:id="@+id/ad_desc"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/ad_sponsored"
		android:layout_alignLeft="@id/ad_sponsored"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="12dp"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="0dp"
		android:gravity="top|left"
		android:textSize="13sp"
		android:textColor="#ff333333"
		android:typeface="normal"
		android:textStyle="normal"
		android:ellipsize="none"
	/>
	<Button
		android:id="@+id/ad_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/ad_desc"
		android:layout_alignParentRight="true"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="12dp"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="0dp"
		android:paddingLeft="10dp"
		android:paddingTop="0dp"
		android:paddingRight="10dp"
		android:paddingBottom="0dp"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@color/mixch_yellow"
		/>
</RelativeLayout>
