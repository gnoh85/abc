<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#EFEFEF"
	android:paddingTop="8dp"
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
	android:paddingBottom="0dp">
	<RelativeLayout
		android:id="@+id/user_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:paddingBottom="8dp">
		<tv.mixch.widget.CircleNetworkImageView
			android:id="@+id/user_image"
			android:layout_width="56dp"
			android:layout_height="56dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:src="@null"
			android:scaleType="fitXY"
			android:background="@null"
			android:adjustViewBounds="true"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			tools:ignore="ContentDescription"
		/>
		<TextView
			android:id="@+id/user_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@id/user_image"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="12dp"
			android:layout_marginBottom="0dp"
			android:textSize="14sp"
			android:textColor="@color/mixch_yellow"
			android:textStyle="bold"
			android:lines="1"
			android:ellipsize="end"
		/>
		<TextView
			android:id="@+id/user_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/user_name"
			android:layout_alignLeft="@id/user_name"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:textSize="12sp"
			android:textColor="#ff777777"
			android:textStyle="normal"
			android:lines="1"
			android:ellipsize="none"
		/>
		<TextView
			android:id="@+id/user_comment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/user_image"
			android:layout_alignLeft="@id/user_image"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:textSize="14sp"
			android:textColor="#ff333333"
			android:textStyle="normal"
			android:ellipsize="none"
		/>
	</RelativeLayout>
	<RelativeLayout
		android:id="@+id/owner_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#F5F5F5"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:paddingBottom="8dp">
		<tv.mixch.widget.CircleNetworkImageView
			android:id="@+id/owner_image"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:src="@null"
			android:scaleType="fitXY"
			android:background="@null"
			android:adjustViewBounds="true"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="4dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="4dp"
			tools:ignore="ContentDescription"
		/>
		<TextView
			android:id="@+id/owner_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@id/owner_image"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="12dp"
			android:layout_marginBottom="0dp"
			android:textSize="14sp"
			android:textColor="@color/mixch_yellow"
			android:textStyle="bold"
			android:lines="1"
			android:ellipsize="end"
		/>
		<TextView
			android:id="@+id/owner_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/owner_name"
			android:layout_alignLeft="@id/owner_name"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="0dp"
			android:layout_marginTop="0dp"
			android:layout_marginBottom="0dp"
			android:textSize="12sp"
			android:textColor="#ff777777"
			android:textStyle="normal"
			android:lines="1"
			android:ellipsize="none"
		/>
		<TextView
			android:id="@+id/owner_comment"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/owner_date"
			android:layout_alignLeft="@id/owner_date"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="4dp"
			android:layout_marginBottom="0dp"
			android:textSize="14sp"
			android:textColor="#ff333333"
			android:textStyle="normal"
			android:ellipsize="none"
		/>
		<TextView
			android:id="@+id/reply_text"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="8dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="0dp"
			android:text="@string/board_reply"
			android:textSize="12sp"
			android:textColor="#ff333333"
			android:textStyle="normal"
			android:ellipsize="none"
			android:drawableLeft="@drawable/icon_reply"
			android:drawablePadding="2dp"
		/>
	</RelativeLayout>
</LinearLayout>
