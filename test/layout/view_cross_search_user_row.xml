<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <tv.mixch.widget.CircleNetworkImageView
        android:id="@+id/user_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/user_fan_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/icon_fan"
        android:drawablePadding="4dp"
        android:textColor="@color/material_grey_500"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/user_name_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/user_image"
        android:layout_toLeftOf="@id/user_fan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/material_grey_900"
        android:textSize="15sp"
        android:textStyle="normal"
        android:maxLines="1"
        />
    <ImageView
        android:id="@+id/official_badge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/user_name_text"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/official_badge"
        tools:ignore="ContentDescription"
        />
    <TextView
        android:id="@+id/user_comment_text"
        android:layout_below="@id/user_name_text"
        android:layout_alignLeft="@id/user_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="64dp"
        android:textColor="@color/material_grey_700"
        android:textSize="12sp"
        android:maxLines="2"
        />
    <View
        android:layout_below="@id/user_image"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/material_grey_300"
        />
</RelativeLayout>
