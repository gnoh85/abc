<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="72dp"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:background="@drawable/btn_live_fan_request"
    >
    <!-- ファンになるメッセージ -->
    <TextView
        android:id="@+id/fan_request_messsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/fan_request"
        android:textColor="@android:color/white"
        />
    <!-- ファン数 -->
    <TextView
        android:id="@+id/fan_request_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingBottom="6dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <!-- ファンの単位 -->
    <TextView
        android:id="@+id/fan_request_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unit_fan"
        android:textColor="@android:color/white"
        android:textSize="8sp"
        android:paddingRight="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
</RelativeLayout>
