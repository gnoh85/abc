<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#c7000000"
    >

    <!--再生時間のプログレス-->
    <View
        android:id="@+id/song_progress"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:transformPivotX="0dp"
        android:background="#FF3B48"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        >
        <!--カラオケ楽曲を選ぶボタン-->
        <ImageView
            android:id="@+id/karaoke_setlist_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#64000000"
            android:src="@drawable/ico_live_setlist"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <!--再生/停止ボタン-->
            <ImageView
                android:id="@+id/play_pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_karaoke_play_pause_small"
                />
            <!--再生中アイコン-->
            <tv.mixch.widget.LiveSongIconView
                android:id="@+id/live_song_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                />
            <!--再生中のカラオケタイトル-->
            <TextView
                android:id="@+id/song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:drawableLeft="@drawable/ico_live_karaoke"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                />
        </LinearLayout>
        <!--音量設定ボタン-->
        <ImageView
            android:id="@+id/expand_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#64000000"
            android:src="@drawable/btn_live_media_control_expand"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            />
    </LinearLayout>
</LinearLayout>