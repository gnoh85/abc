<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#DCDBE3"
    >

    <TextView
        android:id="@+id/bgm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm title"
        android:textSize="18sp"
        android:textColor="#D7157A"
        android:gravity="center_vertical|left"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ico_bgm_pink"
        android:drawablePadding="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/bgm_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:layout_gravity="center_horizontal"
        android:text="I'm artist!"
        android:textSize="12sp"
        android:textColor="#222222"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/make_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_with_bgm"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="@drawable/btn_make_with_bgm"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="8dp"
        />
</LinearLayout>