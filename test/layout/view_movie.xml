<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#FFFFFF">

	<!-- 動画 -->
	<tv.mixch.widget.VideoView
		android:id="@+id/video_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

	<!-- 動画の下にアクション兼Stats -->
	<TextView
		android:id="@+id/fav_button"
		android:layout_width="96dp"
		android:layout_height="50dp"
		android:layout_below="@id/video_view"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:paddingLeft="12dp"
		android:paddingRight="0dp"
		android:paddingTop="0dp"
		android:paddingBottom="0dp"
		android:background="@drawable/btn_round"
		android:gravity="center_vertical|left"
		android:textSize="14sp"
		android:textColor="#4A4A4A"
		android:textStyle="bold"
		android:lines="1"
		android:ellipsize="none"
		android:drawableLeft="@drawable/ic_like_off"
		android:drawablePadding="4dp"
	/>
	<TextView
		android:id="@+id/comment_button"
		android:layout_width="88dp"
		android:layout_height="50dp"
		android:layout_below="@id/video_view"
		android:layout_toRightOf="@id/fav_button"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:paddingLeft="4dp"
		android:paddingRight="0dp"
		android:paddingTop="0dp"
		android:paddingBottom="0dp"
		android:background="@drawable/btn_round"
		android:gravity="center_vertical|left"
		android:textSize="14sp"
		android:textColor="#4A4A4A"
		android:textStyle="bold"
		android:lines="1"
		android:ellipsize="none"
		android:drawableLeft="@drawable/ic_comment"
		android:drawablePadding="4dp"
	/>

	<ImageView
		android:id="@+id/misc_button"
		android:layout_width="44dp"
		android:layout_height="50dp"
		android:layout_below="@id/video_view"
		android:layout_alignParentRight="true"
		android:src="@drawable/ic_misc"
		android:background="@drawable/btn_round"
		android:paddingLeft="6dp"
		android:paddingRight="6dp"
		android:paddingTop="9dp"
		android:paddingBottom="8dp"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		tools:ignore="ContentDescription"
	/>
	<ImageView
		android:id="@+id/share_line"
		android:layout_width="44dp"
		android:layout_height="50dp"
		android:layout_below="@id/video_view"
		android:layout_toLeftOf="@id/misc_button"
		android:src="@drawable/ic_share_line"
		android:background="@drawable/btn_round"
		android:paddingLeft="6dp"
		android:paddingRight="6dp"
		android:paddingTop="9dp"
		android:paddingBottom="8dp"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		tools:ignore="ContentDescription"
	/>
	<ImageView
		android:id="@+id/share_twitter"
		android:layout_width="44dp"
		android:layout_height="50dp"
		android:layout_below="@id/video_view"
		android:layout_toLeftOf="@id/share_line"
		android:src="@drawable/ic_share_twitter"
		android:background="@drawable/btn_round"
		android:paddingLeft="7dp"
		android:paddingRight="7dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		tools:ignore="ContentDescription"
	/>
	<View
		android:id="@+id/border1"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="#e4e1d9"
		android:layout_below="@id/fav_button"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
	/>

	<!-- 投稿者や動画のタイトルなど -->
	<tv.mixch.widget.CircleNetworkImageView
		android:id="@+id/user_image"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_below="@id/border1"
		android:layout_alignParentLeft="true"
		android:paddingLeft="0dp"
		android:paddingRight="0dp"
		android:paddingTop="0dp"
		android:paddingBottom="0dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="0dp"
		tools:ignore="ContentDescription"
	/>
	<TextView
		android:id="@+id/movie_date"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/user_image"
		android:layout_alignParentRight="true"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:paddingRight="8dp"
		android:gravity="center_vertical|right"
		android:textSize="12sp"
		android:textColor="#858585"
		android:typeface="normal"
		android:textStyle="normal"
		android:lines="1"
		android:ellipsize="none"
	/>
	<TextView
		android:id="@+id/user_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/user_image"
		android:layout_toRightOf="@id/user_image"
		android:layout_toLeftOf="@id/movie_date"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="4dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:gravity="center_vertical|left"
		android:textSize="15sp"
		android:textColor="@color/mixch_yellow"
		android:typeface="normal"
		android:textStyle="bold"
		android:lines="1"
	/>
	<TextView
		android:id="@+id/movie_memo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/user_name"
		android:layout_alignLeft="@id/user_name"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="0dp"
		android:gravity="top|left"
		android:textSize="14sp"
		android:textColor="#4A4A4A"
		android:typeface="normal"
		android:textStyle="normal"
		android:ellipsize="none"
	/>

	<TextView
		android:id="@+id/view_count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/movie_memo"
		android:layout_alignParentRight="true"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingTop="13dp"
		android:paddingBottom="13dp"
		android:textSize="12sp"
		android:textColor="#717171"
		android:textStyle="bold"
		android:drawableLeft="@drawable/ic_play_count"
		android:drawablePadding="4dp"
	/>
	<TextView
		android:id="@+id/link_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/movie_memo"
		android:layout_toLeftOf="@id/view_count"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:background="@drawable/btn_round"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingTop="12dp"
		android:paddingBottom="13dp"
		android:textSize="12sp"
		android:textColor="#717171"
		android:textStyle="bold"
		android:drawableLeft="@drawable/ic_link"
		android:drawablePadding="4dp"
	/>

	<!-- タグ、楽曲 -->
	<TextView
		android:id="@+id/movie_tag"
		android:background="@drawable/movie_tag_bg"
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:layout_below="@id/view_count"
		android:layout_alignLeft="@id/movie_memo"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="8dp"
		android:layout_marginRight="8dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:text="" 
		android:textColor="#FF7617"
		android:textSize="13sp"
		android:textStyle="bold"
		android:lines="1"
		android:gravity="center_vertical|left"
		android:drawableLeft="@drawable/ic_tag_word"
		android:drawablePadding="4dp"
		/>
	<TextView
		android:id="@+id/movie_music"
		android:background="@drawable/movie_music_bg"
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:layout_below="@id/view_count"
		android:layout_alignLeft="@id/movie_memo"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="8dp"
		android:layout_marginRight="8dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:text=""
		android:textColor="#1dcbbb"
		android:textSize="13sp"
		android:textStyle="bold"
		android:lines="1"
		android:gravity="center_vertical|left"
		android:drawableLeft="@drawable/ic_music"
		android:drawablePadding="8dp"
		/>

	<!-- リンク先 -->
	<View
		android:id="@+id/link_background"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_below="@id/view_count"
		android:layout_alignLeft="@id/movie_memo"
		android:background="@drawable/movie_link_bg"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="8dp"
	/>
	<tv.mixch.widget.NetworkImageView
		android:id="@+id/link_image"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_alignTop="@id/link_background"
		android:layout_alignRight="@id/link_background"
		android:paddingLeft="0dp"
		android:paddingRight="0dp"
		android:paddingTop="0dp"
		android:paddingBottom="0dp"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="4dp"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="0dp"
		android:visibility="gone"
		tools:ignore="ContentDescription"
	/>
	<TextView
		android:id="@+id/link_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/link_background"
		android:layout_alignLeft="@id/link_background"
		android:layout_toLeftOf="@id/link_image"
		android:layout_marginLeft="11dp"
		android:layout_marginRight="4dp"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="0dp"
		android:gravity="center_vertical|left"
		android:textSize="13sp"
		android:textColor="#717171"
		android:textStyle="bold"
		android:lines="1"
		android:ellipsize="none"
		android:drawableLeft="@drawable/ic_link"
		android:drawablePadding="6dp"
	/>
	<TextView
		android:id="@+id/link_memo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/link_name"
		android:layout_alignLeft="@id/link_name"
		android:layout_toLeftOf="@id/link_image"
		android:layout_marginLeft="21dp"
		android:layout_marginRight="4dp"
		android:layout_marginTop="0dp"
		android:layout_marginBottom="0dp"
		android:gravity="top|left"
		android:textSize="12sp"
		android:textColor="#858585"
		android:lines="1"
		android:ellipsize="none"
	/>
	<Space
		android:id="@+id/bottom_space"
		android:layout_below="@id/movie_memo"
		android:layout_alignParentLeft="true"
		android:layout_width="match_parent"
		android:layout_height="8dp"
	/>
</RelativeLayout>
