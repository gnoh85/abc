<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mypage_stats"
	android:orientation="horizontal"
	android:layout_marginLeft="16dp"
	android:layout_marginRight="16dp"
	android:layout_marginBottom="8dp"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:baselineAligned="false" >
	<LinearLayout
		android:orientation="vertical"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/fan_count"
			android:text=""
			android:textColor="#ff444444"
			android:textSize="20sp"
			android:singleLine="true"
			android:gravity="left"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/fan_label"
			android:text="@string/stat_fan"
			android:textColor="#ff888888"
			android:textSize="12sp"
			android:singleLine="true"
			android:gravity="left"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/play_count"
			android:text=""
			android:textColor="#ff444444"
			android:textSize="20sp"
			android:singleLine="true"
			android:gravity="left"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/play_label"
			android:text="@string/stat_view"
			android:textColor="#ff888888"
			android:textSize="12sp"
			android:singleLine="true"
			android:gravity="left"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/today_count"
			android:text=""
			android:textColor="#ff444444"
			android:textSize="20sp"
			android:singleLine="true"
			android:gravity="left"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/today_label"
			android:text="@string/stat_today"
			android:textColor="#ff888888"
			android:textSize="12sp"
			android:singleLine="true"
			android:gravity="left"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_weight="1"
		android:layout_width="0dp"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/yesterday_count"
			android:text=""
			android:textColor="#ff444444"
			android:textSize="20sp"
			android:singleLine="true"
			android:gravity="left"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<TextView
			android:id="@+id/yesterday_label"
			android:text="@string/stat_yesterday"
			android:textColor="#ff888888"
			android:textSize="12sp"
			android:singleLine="true"
			android:gravity="left"
			android:layout_gravity="left"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
