<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:clickable="false">
        <tv.mixch.widget.CircleNetworkImageView
            android:id="@+id/notification_user_image"
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp"
            android:layout_width="64dp"
            android:layout_height="72dp" />
        <RelativeLayout
            android:minHeight="72dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/notification_text"
                android:textColor="@color/material_grey_900"
                android:textSize="@dimen/notification_comment_text_size"
                android:lineSpacingMultiplier="1.2"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/notification_movie_image"
                android:layout_marginTop="12dp"
                android:layout_marginRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/notification_date"
                android:textColor="@color/material_grey_500"
                android:textSize="@dimen/notification_date_text_size"
                android:layout_below="@+id/notification_text"
                android:layout_alignRight="@+id/notification_text"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <tv.mixch.widget.NetworkImageView
                android:id="@+id/notification_movie_image"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingRight="8dp"
                android:paddingBottom="12dp"
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="88dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        >
        <View
            android:paddingLeft="8dp"
            android:paddingTop="12dp"
            android:paddingRight="8dp"
            android:paddingBottom="12dp"
            android:layout_width="64dp"
            android:layout_height="0dp" />
        <View
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@color/material_grey_300"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="left|bottom" />
    </LinearLayout>
</FrameLayout>