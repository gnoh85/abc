<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_radio_broadcast_select"
        android:scaleType="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/logo_radio_broadcast_select"
            android:scaleType="center"
        />

        <TextView
            android:id="@+id/broadcast_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_radio_broadcast"
            android:textSize="16sp"
            android:textColor="#4A90E2"
            android:background="@drawable/btn_broadcast_mode_select"
            android:drawableLeft="@drawable/btn_radio_select_icon"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:paddingLeft="29dp"
            android:paddingRight="29dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
        />
    </LinearLayout>
</FrameLayout>
