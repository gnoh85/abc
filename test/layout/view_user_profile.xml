<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <tv.mixch.widget.NetworkImageView
        android:id="@+id/wallpaper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        />
    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="#50000000"
        />
    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:paddingTop="48dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <tv.mixch.widget.CircleNetworkImageView
            android:id="@+id/user_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:adjustViewBounds="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFFFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/official_badge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/official_badge"
                    tools:ignore="ContentDescription"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/social_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/rank"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:textColor="#FFFFFFFF"
                    android:background="#50000000"
                    android:textSize="13sp"
                    android:textStyle="normal"
                    android:paddingLeft="4dp"
                    android:paddingTop="0dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="0dp"
                    android:gravity="center"
                    />
                <ImageView
                    android:id="@+id/twitter"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="0dp"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/social_twitter"
                    tools:ignore="ContentDescription"
                    />
                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="0dp"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/social_facebook"
                    tools:ignore="ContentDescription"
                    />
                <ImageView
                    android:id="@+id/youtube"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="0dp"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/social_youtube"
                    tools:ignore="ContentDescription"
                    />
                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="0dp"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/social_instagram"
                    tools:ignore="ContentDescription"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/user_bio"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="13sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/homepage_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/social_homepage"
                android:drawablePadding="5dp"
                android:textColor="#F0AF00"
                android:textSize="13sp"
                android:maxLines="1"
                android:textStyle="normal"
                android:ellipsize="end"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
