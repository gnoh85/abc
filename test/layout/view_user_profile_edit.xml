<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <tv.mixch.widget.NetworkImageView
            android:id="@+id/wallpaper"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            />
        <tv.mixch.widget.CircleNetworkImageView
            android:id="@+id/user_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="80dp"
            android:adjustViewBounds="true"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <!--名前ラベル-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/profile_name"
            />
        <!--名前-->
        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:minLines="1"
            android:maxLines="1"
            android:ellipsize="none"
            android:inputType="textNoSuggestions"
            />
        <!--自己紹介ラベル-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:text="@string/profile_bio"
            />
        <!--自己紹介-->
        <EditText
            android:id="@+id/user_bio"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:minLines="3"
            android:maxLines="6"
            android:gravity="top"
            android:ellipsize="none"
            android:inputType="textMultiLine|textNoSuggestions"
            />
        <!--ホームページラベル-->
        <TextView
            android:id="@+id/homepage_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:text="@string/profile_homepage"
            />
        <!--ホームページ-->
        <EditText
            android:id="@+id/homepage_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:textSize="16sp"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:maxLines="1"
            android:gravity="top"
            android:ellipsize="none"
            android:inputType="textUri"
            />
        <!--カテゴリラベル-->
        <TextView
            android:id="@+id/category_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:text="@string/prof_category"
            />
        <!--カテゴリ-->
        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/category_label"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            >
        </Spinner>
        <!--性別ラベル-->
        <TextView
            android:id="@+id/gender_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:text="@string/prof_gender"
            />
        <!--性別-->
        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/gender_label"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            >
        </Spinner>
        <!--生年ラベル-->
        <TextView
            android:id="@+id/birth_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:text="@string/prof_birth_year"
            />
        <!--生年-->
        <Spinner
            android:id="@+id/birth_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:labelFor="@id/birth_label"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            >
        </Spinner>
    </LinearLayout>
</LinearLayout>
