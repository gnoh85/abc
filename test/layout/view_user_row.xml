<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <tv.mixch.widget.CircleNetworkImageView
            android:id="@+id/user_image"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="80dp"
            android:layout_height="72dp" />
        <RelativeLayout
            android:minHeight="72dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_name_text"
                android:textColor="@color/material_grey_900"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/user_button"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_comment_text"
                android:textColor="@color/material_grey_700"
                android:textSize="14sp"
                android:layout_below="@+id/user_name_text"
                android:layout_alignLeft="@+id/user_name_text"
                android:layout_toLeftOf="@+id/user_button"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.CardView
                app:cardBackgroundColor="@color/mixch_yellow"
                android:id="@+id/user_button"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_button_text"
                    android:background="@drawable/card_round_bg"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/following" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        >
        <View
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="80dp"
            android:layout_height="0dp" />
        <View
            android:background="@color/material_grey_300"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="left|bottom" />
    </LinearLayout>
</FrameLayout>