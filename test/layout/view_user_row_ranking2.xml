<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/rank"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:textColor="@color/material_grey_900"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <tv.mixch.widget.CircleNetworkImageView
        android:id="@+id/user_image"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/rank"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/user_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/user_image"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_grey_900"
        android:textSize="14sp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/official_badge"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/user_name"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/official_badge"
        tools:ignore="ContentDescription"
        />
    <TextView
        android:id="@+id/count_fan"
        android:layout_below="@id/user_name"
        android:layout_toRightOf="@id/user_image"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_fans"
        android:drawablePadding="2dp"
        android:textColor="@color/material_grey_500"
        android:textSize="14sp"
        android:textStyle="normal"
        />
    <TextView
        android:id="@+id/count_movie"
        android:layout_below="@id/user_name"
        android:layout_toRightOf="@id/count_fan"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_movies"
        android:drawablePadding="2dp"
        android:textColor="@color/material_grey_500"
        android:textSize="14sp"
        android:textStyle="normal"
        />
    <TextView
        android:id="@+id/latest_published"
        android:layout_below="@id/user_name"
        android:layout_toRightOf="@id/count_movie"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/material_grey_500"
        android:textSize="14sp"
        android:textStyle="normal"
        />
    <View
        android:layout_below="@id/user_image"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/material_grey_300"
        />
</RelativeLayout>
