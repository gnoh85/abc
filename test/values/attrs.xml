<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--一つの属性名を複数のビューで使用するために宣言-->
    <attr name="defaultImageResId" format="reference"/>

    <declare-styleable name="ProfileView">
        <attr name="editable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NetworkImageView">
        <attr name="defaultImageResId" />
        <attr name="imageUrl" format="string" />
    </declare-styleable>

    <declare-styleable name="FanButton">
        <attr name="following" format="boolean"/>
        <attr name="fan" format="integer" />
    </declare-styleable>

    <declare-styleable name="StatusView">
        <attr name="kind" format="integer"/>
        <attr name="playing" format="boolean" />
        <attr name="alive" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="SocialConnectButton">
        <attr name="socialIcon" format="reference"/>
        <attr name="socialText" format="string"/>
    </declare-styleable>

    <declare-styleable name="StatableRefreshLayout">
        <attr name="content" format="reference"/>
        <attr name="empty" format="reference"/>
        <attr name="loading" format="reference"/>
        <attr name="disableRefresh" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="CircleNetworkImageView">
        <attr name="circleBorderWidth" format="dimension"/>
        <attr name="defaultImageResId"/>
        <attr name="borderColor" format="color"/>
    </declare-styleable>

</resources>
